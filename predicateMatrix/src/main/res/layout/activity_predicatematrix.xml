<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:id="@+id/container_predicatematrix"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@+id/statusView"
                tools:context="org.sqlunet.predicatematrix.browser.PredicateMatrixActivity"
                tools:ignore="MergeRootFrame">

	<ImageView
		android:id="@+id/splash"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_centerInParent="true"
		android:contentDescription="@string/title_activity_predicatematrix"
		android:src="@drawable/ic_splash"/>

	<TextView
		android:id="@+id/splash_hint"
		android:layout_width="fill_parent"
		android:layout_height="wrap_content"
		android:layout_below="@+id/splash"
		android:layout_centerHorizontal="true"
		android:gravity="center"
		android:text="@string/hint_splash_predicatematrix"/>
</RelativeLayout>