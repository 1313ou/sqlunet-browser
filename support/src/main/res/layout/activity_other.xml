<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical">

	<ImageView
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_gravity="center"
		android:contentDescription="@string/title_treebolicwordnet"
		android:gravity="center_horizontal"
		android:padding="5dp"
		android:src="@drawable/logo_treebolicwordnet"
		android:visibility="visible"/>

	<TextView
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_gravity="center"
		android:gravity="center_horizontal"
		android:padding="5dp"
		android:text="@string/title_treebolicwordnet"
		android:visibility="visible"/>

	<ImageButton
		android:id="@+id/marketButton"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_gravity="center_horizontal"
		android:background="@null"
		android:onClick="onMarket"
		android:src="@drawable/ic_googleplay"
		android:visibility="visible"/>

</LinearLayout>