<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical">

	<ImageView
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_gravity="center"
		android:contentDescription="@string/title_donate"
		android:gravity="center_horizontal"
		android:padding="5dp"
		android:src="@drawable/logo_sqlunet"
		android:visibility="visible"/>

	<TextView
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_gravity="center"
		android:contentDescription="@string/title_donate"
		android:gravity="center_horizontal"
		android:padding="5dp"
		android:text="@string/title_donate"
		android:textStyle="bold"
		android:visibility="visible"/>

	<TextView
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_gravity="center"
		android:contentDescription="@string/text_donate"
		android:gravity="center_horizontal"
		android:padding="5dp"
		android:text="@string/text_donate"
		android:visibility="visible"/>

	<ImageButton
		android:id="@+id/buyButton1"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_gravity="center_horizontal"
		android:layout_marginTop="25dp"
		android:background="@null"
		android:contentDescription="@string/title_donate_1"
		android:onClick="onBuy1"
		android:padding="10dp"
		android:src="@drawable/ic_donate1"
		android:visibility="visible"/>

	<ImageButton
		android:id="@+id/buyButton2"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_gravity="center_horizontal"
		android:background="@null"
		android:contentDescription="@string/title_donate_2"
		android:onClick="onBuy2"
		android:padding="10dp"
		android:src="@drawable/ic_donate2"
		android:visibility="visible"/>

	<ImageButton
		android:id="@+id/buyButton3"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_gravity="center_horizontal"
		android:background="@null"
		android:contentDescription="@string/title_donate_3"
		android:onClick="onBuy3"
		android:padding="10dp"
		android:src="@drawable/ic_donate3"
		android:visibility="visible"/>

	<ImageButton
		android:id="@+id/buyButton4"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_gravity="center_horizontal"
		android:background="@null"
		android:contentDescription="@string/title_donate_4"
		android:onClick="onBuy4"
		android:padding="10dp"
		android:src="@drawable/ic_donate4"

		android:visibility="visible"/>

</LinearLayout>