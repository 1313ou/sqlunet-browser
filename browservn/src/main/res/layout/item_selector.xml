<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:background="?android:attr/activatedBackgroundIndicator"
              android:orientation="vertical"
              tools:context="org.sqlunet.browser.selector.Browse1Fragment"
              tools:ignore="Overdraw">

	<ImageView
		android:id="@+id/icon"
		style="@style/Data.Icon"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_marginEnd="5dp"
		android:contentDescription="@string/item"
		android:src="@drawable/ic_item"/>

	<TextView
		android:id="@+id/vnname"
		style="@style/Data.VnName"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:textIsSelectable="false"/>

	<TextView
		android:id="@+id/vnclassname"
		style="@style/Data.VnClassName"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:textIsSelectable="false"/>

	<TextView
		android:id="@+id/vnword"
		style="@style/Data.VnWord"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:textIsSelectable="false"/>

	<LinearLayout
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:orientation="horizontal">

		<TextView
			android:id="@+id/vnid"
			style="@style/Data.VnId"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:textIsSelectable="false"/>

		<TextView
			android:id="@+id/vnwordid"
			style="@style/Data.VnWordId"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:textIsSelectable="false"/>

		<TextView
			android:id="@+id/wordid"
			style="@style/Data.VnWordId"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:textIsSelectable="false"/>

		<TextView
			android:id="@+id/vnclassid"
			style="@style/Data.VnClassId"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:textIsSelectable="false"/>

	</LinearLayout>

</LinearLayout>