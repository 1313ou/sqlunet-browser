<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	app:title="@string/pref_header_wordnet">

	<PreferenceCategory android:title="@string/pref_wordnet_category">
		<SwitchPreferenceCompat
			android:defaultValue="true"
			android:key="pref_display_sem_relation_name"
			android:summary="@string/pref_description_display_sem_relation_name"
			android:title="@string/pref_title_display_sem_relation_name"
			app:singleLineTitle="false" />

		<SwitchPreferenceCompat
			android:defaultValue="true"
			android:key="pref_display_lex_relation_name"
			android:summary="@string/pref_description_display_lex_relation_name"
			android:title="@string/pref_title_display_lex_relation_name"
			app:singleLineTitle="false" />

		<EditTextPreference
			android:defaultValue="-1"
			android:key="pref_relation_recurse"
			android:inputType="number"
			android:summary="@string/pref_description_relation_recursion"
			android:title="@string/pref_title_relation_recursion" />

	</PreferenceCategory>

</PreferenceScreen>