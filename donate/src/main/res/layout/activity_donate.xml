<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	android:layout_width="match_parent"
	android:layout_height="match_parent">

	<com.google.android.material.appbar.AppBarLayout
		android:id="@+id/appbar_layout"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:fitsSystemWindows="@bool/fits_system_windows">

		<include layout="@layout/toolbar" />

	</com.google.android.material.appbar.AppBarLayout>

	<ScrollView
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		app:layout_behavior="com.google.android.material.appbar.AppBarLayout$ScrollingViewBehavior">

		<LinearLayout
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:orientation="vertical">

			<ImageView
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_gravity="center"
				android:contentDescription="@string/title_donate"
				android:gravity="center_horizontal"
				android:padding="5dp"
				android:src="@drawable/logo_app"
				android:visibility="visible" />

			<TextView
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_gravity="center"
				android:contentDescription="@string/title_donate"
				android:gravity="center_horizontal"
				android:padding="5dp"
				android:text="@string/title_donate"
				android:textStyle="bold"
				android:visibility="visible" />

			<TextView
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_gravity="center"
				android:contentDescription="@string/text_donate"
				android:gravity="center_horizontal"
				android:padding="5dp"
				android:text="@string/text_donate"
				android:visibility="visible" />

			<!-- 1 -->

			<Button
				android:id="@+id/buyButton1"
				style="@style/Widget.Material3.Button.IconButton.Filled"
				android:layout_width="56dp"
				android:layout_height="56dp"
				android:layout_gravity="center_horizontal"
				android:layout_marginTop="5dp"
				android:contentDescription="@string/title_donate_1"
				android:src="@drawable/ic_donate1"
				android:tag="0"
				app:backgroundTint="@color/donate1Color"
				app:elevation="6dp"
				app:icon="@drawable/ic_donate1"
				app:iconSize="28dp"
				app:iconTint="@null" />

			<!-- 2 -->

			<Button
				android:id="@+id/buyButton2"

				style="@style/Widget.Material3.Button.IconButton.Filled"
				android:layout_width="56dp"
				android:layout_height="56dp"
				android:layout_gravity="center_horizontal"
				android:layout_marginTop="5dp"
				android:contentDescription="@string/title_donate_2"
				android:tag="1"
				app:backgroundTint="@color/donate2Color"
				app:elevation="6dp"
				app:icon="@drawable/ic_donate2"
				app:iconSize="28dp"
				app:iconTint="@null" />

			<!-- 3 -->

			<Button
				android:id="@+id/buyButton3"
				style="@style/Widget.Material3.Button.IconButton.Filled"
				android:layout_width="56dp"
				android:layout_height="56dp"
				android:layout_gravity="center_horizontal"
				android:layout_marginTop="5dp"
				android:contentDescription="@string/title_donate_3"
				android:tag="2"
				app:backgroundTint="@color/donate3Color"
				app:elevation="6dp"
				app:icon="@drawable/ic_donate3"
				app:iconSize="28dp"
				app:iconTint="@null" />

			<!-- 4 -->

			<Button
				android:id="@+id/buyButton4"
				style="@style/Widget.Material3.Button.IconButton.Filled"
				android:layout_width="56dp"
				android:layout_height="56dp"
				android:layout_gravity="center_horizontal"
				android:layout_marginTop="5dp"
				android:contentDescription="@string/title_donate_4"
				android:tag="3"
				app:backgroundTint="@color/donate4Color"
				app:elevation="6dp"
				app:icon="@drawable/ic_donate4"
				app:iconSize="28dp"
				app:iconTint="@null" />

			<!-- 5 -->

			<Button
				android:id="@+id/buyButton5"
				style="@style/Widget.Material3.Button.IconButton.Filled"
				android:layout_width="56dp"
				android:layout_height="56dp"
				android:layout_gravity="center_horizontal"
				android:layout_marginTop="5dp"
				android:contentDescription="@string/title_donate_5"
				android:tag="4"
				app:backgroundTint="@color/donate5Color"
				app:elevation="6dp"
				app:icon="@drawable/ic_donate5"
				app:iconSize="28dp"
				app:iconTint="@null" />

			<Button
				android:id="@+id/consume"
				style="@style/Widget.Material3.Button.TextButton"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_gravity="center_horizontal"
				android:layout_marginTop="20dp"
				android:contentDescription="@string/title_consume"
				android:padding="10dp"
				android:text="@string/title_consume" />

		</LinearLayout>

	</ScrollView>

</androidx.coordinatorlayout.widget.CoordinatorLayout>