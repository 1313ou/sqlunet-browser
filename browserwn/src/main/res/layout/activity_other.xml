<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	android:layout_width="match_parent"
	android:layout_height="match_parent">

	<android.support.design.widget.AppBarLayout
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:theme="@style/CompatAppTheme.AppBarOverlay">

		<include layout="@layout/toolbar"/>

	</android.support.design.widget.AppBarLayout>

	<ScrollView
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		app:layout_behavior="@string/appbar_scrolling_view_behavior">

		<LinearLayout
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:orientation="vertical">

			<!-- treebolic wordnet -->

			<ImageView
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_gravity="center"
				android:contentDescription="@string/title_treebolicwordnet"
				android:gravity="center_horizontal"
				android:padding="5dp"
				android:src="@drawable/logo_treebolicwordnet"
				android:visibility="visible"/>

			<TextView
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_gravity="center"
				android:gravity="center_horizontal"
				android:padding="5dp"
				android:text="@string/title_treebolicwordnet"
				android:textStyle="bold"
				android:visibility="visible"/>

			<TextView
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_gravity="center"
				android:gravity="center_horizontal"
				android:padding="5dp"
				android:text="@string/text_treebolicwordnet"
				android:visibility="visible"/>

			<ImageButton
				android:id="@+id/marketButtonTreebolicWordNet"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_gravity="center_horizontal"
				android:layout_marginTop="20dp"
				android:background="@null"
				android:contentDescription="@string/title_treebolicwordnet"
				android:onClick="onMarketTreebolicWordNet"
				android:src="@drawable/ic_googleplay"
				android:visibility="visible"/>

			<!-- semantikos -->

			<ImageView
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_gravity="center"
				android:layout_marginTop="25dp"
				android:contentDescription="@string/title_semantikos"
				android:gravity="center_horizontal"
				android:padding="5dp"
				android:src="@drawable/logo_semantikos"
				android:visibility="visible"/>

			<TextView
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_gravity="center"
				android:gravity="center_horizontal"
				android:padding="5dp"
				android:text="@string/title_semantikos"
				android:textStyle="bold"
				android:visibility="visible"/>

			<TextView
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_gravity="center"
				android:gravity="center_horizontal"
				android:padding="5dp"
				android:text="@string/text_sqlunet"
				android:visibility="visible"/>

			<ImageButton
				android:id="@+id/marketButtonSemantikos"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_gravity="center_horizontal"
				android:layout_marginTop="20dp"
				android:background="@null"
				android:contentDescription="@string/title_semantikos"
				android:onClick="onMarketSemantikos"
				android:src="@drawable/ic_googleplay"
				android:visibility="visible"/>

			<!-- semantikos fn -->

			<ImageView
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_gravity="center"
				android:layout_marginTop="25dp"
				android:contentDescription="@string/title_semantikos_fn"
				android:gravity="center_horizontal"
				android:padding="5dp"
				android:src="@drawable/logo_semantikos_fn"
				android:visibility="visible"/>

			<TextView
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_gravity="center"
				android:gravity="center_horizontal"
				android:padding="5dp"
				android:text="@string/title_semantikos_fn"
				android:textStyle="bold"
				android:visibility="visible"/>

			<TextView
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_gravity="center"
				android:gravity="center_horizontal"
				android:padding="5dp"
				android:text="@string/text_semantikos_fn"
				android:visibility="visible"/>

			<ImageButton
				android:id="@+id/marketButtonSqlunetFn"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_gravity="center_horizontal"
				android:layout_marginTop="20dp"
				android:background="@null"
				android:contentDescription="@string/title_semantikos_fn"
				android:onClick="onMarketSemantikosFn"
				android:src="@drawable/ic_googleplay"
				android:visibility="visible"/>

		</LinearLayout>

	</ScrollView>

</android.support.design.widget.CoordinatorLayout>