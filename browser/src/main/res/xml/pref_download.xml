<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- NOTE: Hide buttons to simplify the UI. Users can touch outside the dialog to dismiss it. -->
    <!-- NOTE: ListPreference's summary should be set to its value by the activity code. -->

    <EditTextPreference
        android:key="pref_download_site"
        android:defaultValue="@string/pref_default_download_site"
        android:summary="@string/pref_description_download_site"
        android:title="@string/pref_title_download_site"/>

    <EditTextPreference
        android:key="pref_download_dbfile"
        android:defaultValue="@string/pref_default_download_dbfile"
        android:summary="@string/pref_description_download_dbfile"
        android:title="@string/pref_title_download_dbfile"/>

    <EditTextPreference
        android:key="pref_download_sqlfile"
        android:defaultValue="@string/pref_default_download_sqlfile"
        android:summary="@string/pref_description_download_sqlfile"
        android:title="@string/pref_title_download_sqlfile"/>

    <EditTextPreference
        android:key="pref_entry_import"
        android:defaultValue="@string/pref_default_entry_import"
        android:summary="@string/pref_description_entry_import"
        android:title="@string/pref_title_entry_import"/>

    <EditTextPreference
        android:key="pref_entry_pm"
        android:defaultValue="@string/pref_default_entry_pm"
        android:summary="@string/pref_description_entry_pm"
        android:title="@string/pref_title_entry_pm"/>

    <EditTextPreference
        android:key="pref_entry_index"
        android:defaultValue="@string/pref_default_entry_index"
        android:summary="@string/pref_description_entry_index"
        android:title="@string/pref_title_entry_index"/>

</PreferenceScreen>
