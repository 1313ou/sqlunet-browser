<PreferenceScreen xmlns:tools="http://schemas.android.com/tools"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	tools:keep="@xml/pref_headers">

	<Preference
		app:fragment="org.sqlunet.browser.config.SettingsActivity$GeneralPreferenceFragment"
		app:icon="@drawable/ic_settings_general"
		app:key="pref_header_general"
		app:title="@string/pref_header_general" />
	<Preference
		app:fragment="org.sqlunet.treeview.settings.TreePreferenceFragment"
		app:icon="@drawable/ic_settings_tree"
		app:key="pref_header_tree"
		app:title="@string/pref_header_tree" />
	<Preference
		app:fragment="org.sqlunet.browser.config.SettingsActivity$FilterPreferenceFragment"
		app:icon="@drawable/ic_settings_filter"
		app:key="pref_header_filter"
		app:title="@string/pref_header_filter" />
	<Preference
		app:fragment="org.sqlunet.browser.config.SettingsActivity$AssetsPreferenceFragment"
		app:icon="@drawable/ic_settings_assets"
		app:key="pref_header_assets"
		app:title="@string/pref_header_assets" />
	<Preference
		app:fragment="org.sqlunet.browser.config.SettingsActivity$DownloadPreferenceFragment"
		app:icon="@drawable/ic_settings_download"
		app:key="pref_header_download"
		app:title="@string/pref_header_download" />
	<Preference
		app:fragment="org.sqlunet.browser.config.SettingsActivity$DatabasePreferenceFragment"
		app:icon="@drawable/ic_settings_database"
		app:key="pref_header_database"
		app:title="@string/pref_header_database" />
	<Preference
		app:fragment="org.sqlunet.speak.SpeakSettingsFragment"
		app:icon="@drawable/ic_settings_speak"
		app:key="pref_header_voice"
		app:title="@string/pref_header_speak" />

</PreferenceScreen>
