<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical"
              android:weightSum="1">

	<ImageView
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_gravity="center_horizontal"
		android:layout_marginBottom="12dp"
		android:layout_marginTop="12dp"
		android:contentDescription="@string/app_name"
		android:src="@drawable/ic_launcher"/>

	<ScrollView
		android:layout_width="match_parent"
		android:layout_height="0dp"
		android:orientation="vertical"
		android:layout_weight="1">

		<GridLayout
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_gravity="center_horizontal|center_vertical"
			android:paddingTop="20dp"
			android:paddingBottom="20dp"
			android:columnCount="2"
			android:orientation="horizontal">

			<!-- database -->

			<TextView
				style="@style/GridLabel"
				android:text="@string/status_database"/>

			<LinearLayout style="@style/GridData">

				<ImageView
					android:id="@+id/status_database"
					style="@style/GridStatusImage"
					android:contentDescription="@string/status_database"/>

				<ImageButton
					android:id="@+id/databaseButton"
					style="@style/GridStatusActionButton"
					android:contentDescription="@string/status_database"
					android:src="@drawable/bn_download"/>

				<ImageButton
					android:id="@+id/info_database"
					style="@style/GridStatusInfoButton"
					android:contentDescription="@string/hint_database"
					android:src="@drawable/bn_info"/>
			</LinearLayout>


			<!-- predicatematrix -->

			<TextView
				style="@style/GridLabel"
				android:text="@string/status_predicatematrix"
				/>

			<LinearLayout style="@style/GridData">

				<ImageView
					android:id="@+id/status_predicatematrix"
					style="@style/GridStatusImage"
					android:contentDescription="@string/status_predicatematrix"/>

				<ImageButton
					android:id="@+id/predicatematrixButton"
					style="@style/GridStatusActionButton"
					android:contentDescription="@string/status_predicatematrix"
					android:src="@drawable/bn_setup"/>
			</LinearLayout>

			<!-- indexes -->

			<TextView
				style="@style/GridLabel"
				android:text="@string/status_indexes"
				/>

			<LinearLayout style="@style/GridData">

				<ImageView
					android:id="@+id/status_indexes"
					style="@style/GridStatusImage"
					android:contentDescription="@string/status_indexes"/>

				<ImageButton
					android:id="@+id/indexesButton"
					style="@style/GridStatusActionButton"
					android:contentDescription="@string/status_indexes"
					android:src="@drawable/bn_setup"/>
			</LinearLayout>

			<!-- textsearch wordnet -->

			<TextView
				style="@style/GridLabel"
				android:text="@string/status_textsearch"
				/>

			<LinearLayout style="@style/GridData">

				<ImageView
					android:id="@+id/status_textsearchWn"
					style="@style/GridStatusImage"
					android:contentDescription="@string/status_textsearch"/>

				<ImageButton
					android:id="@+id/textsearchWnButton"
					style="@style/GridStatusActionButton"
					android:contentDescription="@string/status_textsearch"
					android:src="@drawable/bn_setup"/>
			</LinearLayout>

			<!-- textsearch verbnet -->

			<TextView
				style="@style/GridLabel"
				android:text="@string/status_textsearchVn"/>

			<LinearLayout style="@style/GridData">

				<ImageView
					android:id="@+id/status_textsearchVn"
					style="@style/GridStatusImage"
					android:contentDescription="@string/status_textsearchVn"/>

				<ImageButton
					android:id="@+id/textsearchVnButton"
					style="@style/GridStatusActionButton"
					android:contentDescription="@string/status_textsearchVn"
					android:src="@drawable/bn_setup"/>
			</LinearLayout>

			<!-- textsearch propbank -->

			<TextView
				style="@style/GridLabel"
				android:text="@string/status_textsearchPb"/>

			<LinearLayout style="@style/GridData">

				<ImageView
					android:id="@+id/status_textsearchPb"
					style="@style/GridStatusImage"
					android:contentDescription="@string/status_textsearchPb"/>

				<ImageButton
					android:id="@+id/textsearchPbButton"
					style="@style/GridStatusActionButton"
					android:contentDescription="@string/status_textsearchPb"
					android:src="@drawable/bn_setup"/>
			</LinearLayout>

			<!-- textsearch framenet -->

			<TextView
				style="@style/GridLabel"
				android:text="@string/status_textsearchFn"/>

			<LinearLayout style="@style/GridData">

				<ImageView
					android:id="@+id/status_textsearchFn"
					style="@style/GridStatusImage"
					android:contentDescription="@string/status_textsearchFn"/>

				<ImageButton
					android:id="@+id/textsearchFnButton"
					style="@style/GridStatusActionButton"
					android:contentDescription="@string/status_textsearchFn"
					android:src="@drawable/bn_setup"/>
			</LinearLayout>
		</GridLayout>

	</ScrollView>
</LinearLayout>
