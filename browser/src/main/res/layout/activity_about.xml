<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:tools="http://schemas.android.com/tools"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:context="org.sqlunet.browser.AboutActivity">

	<LinearLayout
		android:id="@+id/sqlunet"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:orientation="vertical"
		android:paddingBottom="16dp"
		android:paddingLeft="16dp"
		android:paddingRight="16dp"
		android:paddingTop="16dp">

		<ImageView
			android:id="@+id/sqlunetImage"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_gravity="center_horizontal"
			android:contentDescription="@string/about_sqlunet_label"
			android:src="@drawable/ic_launcher"/>

		<TextView
			android:id="@+id/sqlunetLabel"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_gravity="center_horizontal"
			android:text="@string/about_sqlunet_label"
			android:textSize="20sp"
			android:textStyle="bold"/>

		<TextView
			android:id="@+id/sqlunetText"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_gravity="center_horizontal"
			android:gravity="center"
			android:text="@string/about_sqlunet_text"/>

		<TextView
			android:id="@+id/sqlunetAuthor"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_gravity="center_horizontal"
			android:text="@string/about_sqlunet_author"
			android:textStyle="italic"/>

		<TextView
			android:id="@+id/sqlunetCopyright"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_gravity="center_horizontal"
			android:text="@string/about_sqlunet_copyright"/>
	</LinearLayout>

</ScrollView>