<resources>

	<style name="Base.Framework" parent="Theme.Material3.DayNight.NoActionBar">
		<!-- from material builder -->
	</style>

	<style name="Base.MyTheme" parent="Base.Framework">

		<!-- O V E R R I D E S -->

		<!-- transparent statusbar and navigation bar -->
		<item name="android:statusBarColor">@android:color/transparent</item>
		<item name="android:navigationBarColor">@android:color/transparent</item>

		<!-- whether this Window is responsible for drawing the background for the system bars.
		     if true and the window is not floating, the system bars are drawn with a
             transparent background and the corresponding areas in this window are filled with the
             colors specified in android.R.attr#statusBarColor and android.R.attr#navigationBarColor-->
		<item name="android:windowDrawsSystemBarBackgrounds">true</item>

		<!-- Force drawing behind system bars -->
		<!-- whether this window requests a translucent status bar -->
		<item name="android:windowTranslucentStatus">false</item>
		<!-- whether this window requests a translucent navigation bar -->
		<item name="android:windowTranslucentNavigation">false</item>

		<!-- S T Y L E S -->

		<!-- menu dropdown -->
		<item name="popupMenuBackground">@color/surfaceColor</item>

		<!--app bar -->
		<item name="appBarLayoutStyle">@style/MyAppBarLayout</item>

		<!-- dropdowns -->
		<item name="android:dropDownListViewStyle">@style/MyDropDownListViewStyle</item>
		<item name="android:dropDownItemStyle">@style/MyDropDownItemStyle</item>

		<!-- autocomplete text view -->
		<item name="android:autoCompleteTextViewStyle">@style/MyAutoCompleteTextViewStyle</item>

	</style>

	<style name="MyTheme" parent="Base.MyTheme" />

</resources>
