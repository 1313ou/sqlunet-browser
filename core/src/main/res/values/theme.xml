<resources>

	<style name="Base.MyTheme" parent="Theme.Material3.DayNight.NoActionBar">

		<!-- C O L O R S -->

		<!-- framework colors -->
		<item name="colorSurface">@color/surfaceColor</item>
		<item name="colorOnSurface">@color/onPrimaryColor</item>

		<item name="colorPrimary">@color/primaryColor</item>
		<item name="colorOnPrimary">@color/onPrimaryColor</item>

		<!-- requires attention : snackbar, fab -->
		<item name="colorSecondary">@color/secondaryColor</item>
		<item name="colorSecondaryVariant">@color/secondaryLightColor</item>
		<item name="colorOnSecondary">@color/onSecondaryColor</item>

		<!-- nav bar -->
		<item name="colorPrimaryVariant">@color/primaryLightColor</item>
		<item name="colorPrimaryDark">@color/primaryDarkColor</item>

		<!-- caret -->
		<item name="colorControlActivated">@color/secondaryColor</item>-->

		<!-- O V E R R I D E S -->

		<!-- foreground and background -->
		<!-- <item name="android:windowBackground">@color/backgroundColor</item>-->
		<!-- <item name="android:colorBackground">@color/backgroundColor</item>-->
		<!-- <item name="android:colorForeground">@color/foregroundColor</item>-->

		<!-- transparent statusbar and navigation bar -->
		<item name="android:statusBarColor">@android:color/transparent</item>
		<item name="android:navigationBarColor">@android:color/transparent</item>

		<!-- whether this Window is responsible for drawing the background for the system bars.
		     if true and the window is not floating, the system bars are drawn with a
             transparent background and the corresponding areas in this window are filled with the
             colors specified in android.R.attr#statusBarColor and android.R.attr#navigationBarColor-->
		<item name="android:windowDrawsSystemBarBackgrounds">true</item>

		<!-- Force drawing behind system bars -->
		<!-- whether this window requests a translucent status bar -->
		<item name="android:windowTranslucentStatus">false</item>
		<!-- whether this window requests a translucent navigation bar -->
		<item name="android:windowTranslucentNavigation">false</item>

		<!-- S T Y L E S -->

		<!-- menu dropdown -->
		<item name="popupMenuBackground">@color/primaryColor</item>

		<!--app bar -->
		<item name="appBarLayoutStyle">@style/MyAppBarLayout</item>

	</style>

	<style name="MyTheme" parent="Base.MyTheme" />

</resources>
