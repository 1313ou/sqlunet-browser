<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:background="?android:attr/activatedBackgroundIndicator"
              android:orientation="vertical"
              tools:context="org.sqlunet.browser.selector.Browse1Fragment"
              tools:ignore="Overdraw">

	<ImageView
		android:id="@+id/icon"
		style="@style/Data.Icon"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_gravity="center_vertical"
		android:layout_marginEnd="5dp"
		android:contentDescription="@string/description_row"
		android:src="@drawable/ic_item"/>

	<TextView
		android:id="@+id/fnname"
		style="@style/Data.FnName"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:textIsSelectable="false"/>

	<TextView
		android:id="@+id/fnframename"
		style="@style/Data.FnFrameName"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:textIsSelectable="false"/>

	<TextView
		android:id="@+id/fnword"
		style="@style/Data.FnWord"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:textIsSelectable="false"/>

	<LinearLayout
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:orientation="horizontal">

		<TextView
			android:id="@+id/fnid"
			style="@style/Data.FnId"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:textIsSelectable="false"/>

		<TextView
			android:id="@+id/fnwordid"
			style="@style/Data.FnWordId"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:textIsSelectable="false"/>

		<TextView
			android:id="@+id/wordid"
			style="@style/Data.FnWordId"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:textIsSelectable="false"/>

		<TextView
			android:id="@+id/fnframeid"
			style="@style/Data.FnFrameId"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:textIsSelectable="false"/>

	</LinearLayout>

</LinearLayout>