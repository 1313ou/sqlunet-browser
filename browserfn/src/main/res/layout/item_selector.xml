<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:background="?android:attr/activatedBackgroundIndicator"
              android:orientation="vertical"
              tools:context="org.sqlunet.browser.selector.Browse1Fragment"
              tools:ignore="Overdraw">

	<LinearLayout
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:orientation="horizontal">

		<ImageView
			style="@style/Data.Icon"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_marginEnd="5dp"
			android:contentDescription="@string/item"
			android:src="@drawable/ic_item"/>

	</LinearLayout>

	<LinearLayout
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:orientation="horizontal">

		<TextView
			android:id="@+id/wordid"
			style="@style/Data.WordId"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:textIsSelectable="false"/>

	</LinearLayout>

	<LinearLayout
		android:layout_width="match_parent"
		android:layout_height="wrap_content">

		<TextView
			android:id="@+id/fnid"
			style="@style/Data.FnWordId"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:textIsSelectable="false"/>

	</LinearLayout>

	<LinearLayout
		android:layout_width="match_parent"
		android:layout_height="wrap_content">

		<TextView
			android:id="@+id/fnword"
			style="@style/Data.FnWord"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:textIsSelectable="false"/>

	</LinearLayout>

	<View style="@style/Separator"/>

</LinearLayout>