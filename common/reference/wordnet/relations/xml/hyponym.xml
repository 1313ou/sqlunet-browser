<?xml version="1.0" encoding="UTF-8"?>

<link name="Hyponym/Troponym" id="hyponym" type="semantic" reverse="hypernym" n="true" v="true">

	<img src="hyponym.png" />

	<description>
		<span>Subordinate (i.e. more specific). The specific term used to designate a member of a class.</span>
	</description>
	<description>
		<span>A verb expressing a specific manner elaboration of another verb. Manner name (a word that denotes a manner of doing something).</span>
	</description>

	<logical>
		<def>
			<span>
				<b>X</b>
				is a hyponym of
				<b>Y</b>
			</span>
		</def>
		<cond>
			<span>
				<b>X</b>
				is a (kind of)
				<b>Y</b>
			</span>
		</cond>
	</logical>
	<logical>
		<def>
			<span>
				<b>X</b>
				is a troponym of
				<b>Y</b>
			</span>
		</def>
		<cond>
			<span>
				to
				<b>X</b>
				is to
				<b>Y</b>
				in some manner
			</span>
		</cond>
	</logical>

	<examples>
		<example>
			<from>tree</from>
			<to>oak</to>
			<gloss>an oak is a kind of tree</gloss>
		</example>
		<example>
			<from>plant</from>
			<to>tree</to>
			<gloss>a tree is a kind of plant</gloss>
		</example>
		<example>
			<from>tree</from>
			<to>oak</to>
			<gloss>a oak is a kind of tree</gloss>
		</example>
		<example>
			<from>roadster</from>
			<to>car</to>
			<gloss>a roadster is a kind of car</gloss>
		</example>
		<example>
			<from>car</from>
			<to>motor vehicle</to>
			<gloss>a car is a kind of motor vehicle</gloss>
		</example>
		<example>
			<from>motor vehicle</from>
			<to>wheeled vehicle</to>
			<gloss>a motor vehicle is a kind of wheeled vehicle</gloss>
		</example>
		<example>
			<from>dwelling</from>
			<to>house</to>
			<gloss>a house is a kind of dwelling</gloss>
		</example>
		<example>
			<from>disatisfaction</from>
			<to>disappointment</to>
			<gloss>disappointment is a kind of disatisfaction</gloss>
		</example>

		<example>
			<from>group</from>
