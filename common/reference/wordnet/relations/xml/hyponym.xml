<relation name="Hyponym" id="hyponym" type="semantic" inverse="hypernym" n="true" v="true">

  <img src="hyponym.png"/>

  <description>
    <span>Subordinate (i.e. more specific). The specific term used to designate a member of a class. A concept that is more specific than a given concept. A hyponym of something is its subtype.</span>
  </description>
  <description>
    <!-- @formatter:off --><span><b>Troponym</b>. A verb expressing a specific manner elaboration of another verb. Manner name (a word that denotes a manner of doing something).</span><!-- @formatter:on -->
  </description>

  <logical>
    <def><!-- @formatter:off --><span><b>H</b> is a hyponym of <b>X</b></span><!-- @formatter:on --></def>
    <cond><!-- @formatter:off --><span><b>H</b> is a (kind of) <b>X</b></span><!-- @formatter:on --></cond>
  </logical>

  <logical>
    <def><!-- @formatter:off --><span><b>H</b> is a troponym of <b>X</b></span><!-- @formatter:on --></def>
    <cond><!-- @formatter:off --><span>to <b>H</b> is to <b>X</b> in some manner </span><!-- @formatter:on --></cond>
  </logical>

  <phrases>
    <phrase><span>is more specific than</span></phrase>
    <phrase><span>is a subtype of</span></phrase>
  </phrases>

  <guides>
    <guide>
      <from/>
      <to>hyponym</to>
      <gloss/>
    </guide>
    <guide>
      <from/>
      <to>troponym</to>
      <gloss/>
    </guide>
    <guide>
      <from>X</from>
      <to>H</to>
      <gloss/>
    </guide>
  </guides>

  <examples>
    <example>
      <from>tree</from>
      <to>oak</to>
      <gloss>an oak is a kind of tree</gloss>
    </example>
    <example>
