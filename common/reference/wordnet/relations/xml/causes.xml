<link
	name="Causes"
	id="causes"
	type="semantic"
	v="true">

	<img src="causes.png" />

	<description>
		<span>Causes</span>
	</description>

	<logical>
		<def>
			<span>
				A verb
				<b>X</b>
				causes
				<b>Y</b>
			</span>
		</def>
		<cond>
			<span>
				<b>X</b>
				denotes the causation of the state or activity referred to by
				<b>Y</b>
			</span>
		</cond>
	</logical>

	<examples>
		<example>
			<from>give</from>
			<to>have</to>
			<gloss>resultative</gloss>
		</example>
		<example>
			<from>show</from>
			<to>see</to>
			<gloss>resultative</gloss>
		</example>
		<example>
			<from>raise</from>
			<to>rise</to>
			<gloss>resultative</gloss>
		</example>
		<example>
			<from>teach</from>
			<to>learn</to>
			<gloss>resultative</gloss>
		</example>
		<example>
			<from>feed</from>
			<to>eat</to>
			<gloss>resultative</gloss>
		</example>
		<example>
			<from>scare</from>
			<to>fear</to>
			<gloss>resultative</gloss>
		</example>
		<example>
			<from>fell</from>
			<to>fall</to>
			<gloss>resultative</gloss>
		</example>
	</examples>

	<see tag="entails" />

</link>

