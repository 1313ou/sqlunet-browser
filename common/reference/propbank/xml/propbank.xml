<concepts name="PropBank">

	<concept
		name="Role Set"
		id="pbroleset">
		<img src="pbroleset.png" />
		<description>The set of roles attached to a predicate verb.</description>
		<examples>
			<context><name>rise</name>predicate
			</context>
			<example>rise.01</example>
		</examples>
	</concept>

	<concept
		name="Predicate"
		id="pbpredicate">
		<img src="pbpredicate.png" />
		<description>The predicate verb</description>
		<examples>
			<context><name>The sales rose.</name>example
			</context>
			<example>rose</example>
		</examples>
	</concept>

	<concept
		name="Role"
		id="pbrole">
		<img src="pbrole.png" />
		<description>Roles in the role set seen as arguments to predicate</description>
		<examples>
			<context><name>rise.01</name>role set
			</context>
			<example>Arg0
				<i>Causer of inception/rising of arg1</i>
			</example>
			<example>Arg1
				<i>Logical subject, patient, thing rising</i>
			</example>
			<example>Arg2
				<i>EXT, amount risen</i>
			</example>
			<example>Arg3
				<i>Start point</i>
			</example>
			<example>Arg4
				<i>End point</i>
			</example>
			<example>Arg5
				<i>Medium</i>
			</example>
		</examples>
	</concept>

	<concept
		name="RoleSet Alias"
		id="pbaliasroleset">
		<img src="pbaliasroleset.png" />
		<description>Another name given to the role set in VerbNet or FrameNet</description>
		<examples>
			<context><name>abandon.01 (v.)</name>roleset
			</context>
			<example>leave-51.2 (VerbNet)</example>
			<example>Departing (FrameNet)</example>
			<example>Quitting a place (FrameNet)</example>
		</examples>
	</concept>

	<concept
		name="Role Alias"
		id="pbaliasrole">
		<img src="pbaliasrole.png" />
		<description>Another name given to the argument role in VerbNet or FrameNet.</description>
		<examples>
			<context><name>Arg-0, abandoner</name>role
			</context>
			<example>leave-51.2, Theme (VerbNet)</example>
			<example>Departing, Theme (FrameNet)</example>
			<example>Quitting a place, Self Mover (FrameNet)</example>
		</examples>
		<examples>
			<context><name>Arg-1, entity left behind</name>role
			</context>
			<example>leave-51.2, Initial Location (VerbNet)</example>
			<example>Departing, Source (FrameNet)</example>
			<example>Quitting a place, Source (FrameNet)</example>
		</examples>
	</concept>

	<concept
		name="Trace"
		id="pbtrace">
		<img src="pbtrace.png" />
		<description>The trace (left by 'movement')</description>
		<examples>
			<context><name>I want to eat ice-cream</name>sentence
			</context>
			<example>Arg0:I<br />rel:want<br />Arg1:[*T* to eat ice-cream]
			</example>
		</examples>
	</concept>

</concepts>

