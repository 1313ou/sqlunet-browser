<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

	<!-- Bottom 2dp Shadow -->
	<item
		android:left="0dp"
		android:right="0dp">
		<shape android:shape="rectangle">

			<solid android:color="#d8d8d8"/>
			<corners android:radius="2dp"/>

		</shape>
	</item>

	<!-- White Top color -->
	<item
		android:bottom="2dp"
		android:left="0dp"
		android:right="0dp">

		<shape android:shape="rectangle">

			<solid android:color="#FFFFFF"/>
			<corners android:radius="2dp"/>

		</shape>

	</item>

</layer-list>