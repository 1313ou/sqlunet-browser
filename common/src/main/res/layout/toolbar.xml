<androidx.appcompat.widget.Toolbar xmlns:android="http://schemas.android.com/apk/res/android"
                                   xmlns:app="http://schemas.android.com/apk/res-auto"
                                   xmlns:tools="http://schemas.android.com/tools"
                                   android:id="@+id/toolbar"
                                   android:layout_width="match_parent"
                                   android:layout_height="?attr/actionBarSize"
                                   android:theme="@style/MyAppTheme.AppBarOverlay"
                                   app:elevation="4dp"
                                   app:title="@string/app_name"
                                   app:subtitle="@string/app_subname"
                                   app:popupTheme="@style/MyAppTheme.PopupOverlay"
                                   app:subtitleTextColor="@color/primaryAltForeColor"
                                   app:titleTextColor="@color/primaryForeColor"
                                   tools:ignore="UnusedAttribute"/>