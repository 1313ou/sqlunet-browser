<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_centerHorizontal="true"
                android:orientation="vertical"
                tools:context="org.sqlunet.browser.config.SetupFileFragment">

	<LinearLayout
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:layout_centerHorizontal="true"
		android:layout_centerVertical="true"
		android:orientation="vertical"
		tools:ignore="UselessParent">

		<Spinner
			android:id="@+id/task_spinner"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_gravity="center_horizontal"
			android:layout_margin="10dp"
			android:background="@android:color/transparent"
			android:gravity="center"/>

		<ImageButton
			android:id="@+id/task_run"
			style="@style/ActionButton"
			android:layout_width="64dp"
			android:layout_height="64dp"
			android:layout_gravity="center_horizontal"
			android:background="@drawable/bg_button_action"
			android:contentDescription="@string/action_download"
			android:src="@drawable/ic_run"
			android:text="@string/action_run"/>

		<TextView
			android:id="@+id/task_status"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_gravity="center_horizontal"
			android:layout_marginBottom="20dp"
			android:layout_marginEnd="50dp"
			android:layout_marginStart="50dp"
			android:layout_marginTop="20dp"
			android:textIsSelectable="true"/>

	</LinearLayout>
</RelativeLayout>