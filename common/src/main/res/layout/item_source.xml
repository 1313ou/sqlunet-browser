<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	style="@style/ListItem"
	android:layout_width="match_parent"
	android:layout_height="wrap_content"
	android:orientation="vertical">

	<TextView
		android:id="@+id/name"
		style="@android:style/TextAppearance.Large"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_gravity="center_horizontal"
		android:gravity="center"
		android:contentDescription="@string/description_column_name"
		android:textIsSelectable="true" />

	<TextView
		android:id="@+id/version"
		style="@android:style/TextAppearance.Small"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_gravity="center_horizontal"
		android:gravity="center"
		android:contentDescription="@string/description_column_version"
		android:textIsSelectable="true" />

	<TextView
		android:id="@+id/provider"
		style="@android:style/TextAppearance.Small"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_gravity="center_horizontal"
		android:gravity="center"
		android:contentDescription="@string/description_column_provider"
		android:textIsSelectable="true" />

	<TextView
		android:id="@+id/url"
		style="@android:style/TextAppearance.Small"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_gravity="center_horizontal"
		android:autoLink="web"
		android:clickable="true"
		android:focusable="true"
		android:gravity="center"
		android:linksClickable="true"
		android:contentDescription="@string/description_column_url"
		android:textIsSelectable="false" />

	<TextView
		android:id="@+id/reference"
		style="@android:style/TextAppearance.Small"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:contentDescription="@string/description_column_reference"
		android:textColor="@android:color/secondary_text_dark"
		android:textIsSelectable="true" />

</LinearLayout>