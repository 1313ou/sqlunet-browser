<resources>

	<!-- Toolbar -->
	<style name="MyAppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar">
		<item name="android:textColorPrimary">@color/actionbar_fore_color</item>item>
	</style>

	<style name="MyAppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Dark">
		<item name="android:background">@color/actionbar_color</item>item>
		<item name="android:textColorPrimary">@color/actionbar_fore_color</item>item>
		<item name="android:textColorSecondary">@color/actionbar_secondary_fore_color</item>
	</style>

	<style name="MyAppTheme.Toolbar" parent="Widget.AppCompat.Toolbar">
		<item name="android:background">@color/actionbar_color</item>
	</style>

	<!-- Action bar -->
	<style name="MyAppTheme.ActionBar" parent="Widget.AppCompat.ActionBar">
		<item name="android:background">@color/actionbar_color</item>
	</style>

	<!-- Drop downs -->
	<style name="MyAppTheme.DropDownItemStyle" parent="Widget.AppCompat.DropDownItem.Spinner">
		<item name="android:textColor">@color/dropdown_fore_color</item>
		<item name="android:textSize">14sp</item>
	</style>

	<style name="MyAppTheme.DropDownListViewStyle" parent="Widget.AppCompat.ListView.DropDown">
		<item name="android:background">@color/dropdown_color</item>
	</style>

	<!-- Autocomplete -->
	<style name="MyAppTheme.AutoCompleteTextViewStyle" parent="Widget.AppCompat.Light.AutoCompleteTextView">
		<item name="android:popupBackground">@color/dropdown_color</item>
	</style>

</resources>