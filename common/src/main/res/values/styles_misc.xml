<resources>

	<!-- L I S T  I T E M -->

	<style name="ListItem">
		<item name="android:layout_marginBottom">@dimen/list_vertical_margin</item>
		<item name="android:layout_marginTop">@dimen/list_vertical_margin</item>
		<item name="android:layout_marginLeft">@dimen/list_horizontal_margin</item>
		<item name="android:layout_marginRight">@dimen/list_horizontal_margin</item>
		<item name="android:gravity">center_vertical</item>
		<item name="android:paddingTop">@dimen/list_vertical_padding</item>
		<item name="android:paddingBottom">@dimen/list_vertical_padding</item>
		<item name="android:paddingLeft">@dimen/list_horizontal_padding</item>
		<item name="android:paddingRight">@dimen/list_horizontal_padding</item>
		<item name="android:textIsSelectable">true</item>
		<item name="android:descendantFocusability">blocksDescendants</item>
	</style>

	<style name="ListItemColumn">
		<item name="android:paddingStart">@dimen/listitem_horizontal_padding</item>
		<item name="android:paddingEnd">@dimen/listitem_horizontal_padding</item>
		<item name="android:paddingTop">@dimen/listitem_vertical_padding</item>
		<item name="android:paddingBottom">@dimen/listitem_vertical_padding</item>
		<item name="android:gravity">center_vertical</item>
		<item name="android:textIsSelectable">true</item>
		<item name="android:textAppearance">?android:attr/textAppearanceMedium</item>
		<item name="android:ellipsize">end</item>
	</style>

	<style name="ListItemColumn.Minor">
		<item name="android:textAppearance">?attr/textAppearanceListItemSmall</item>
	</style>

	<style name="ListItemColumn.Major">
		<item name="android:background">?attr/colorSecondary</item>
		<item name="android:textColor">?attr/colorOnSecondary</item>
	</style>

	<!-- As TextView -->
	<style name="TextViewListItemStyle"></style>

	<!-- As Layout -->
	<style name="ListItemStyle"></style>

	<!-- S E A R C H   T E X T -->

	<style name="SearchTextItem" parent="TextViewListItemStyle">
		<item name="android:textAppearance">?attr/textAppearanceListItemSmall</item>
		<item name="android:gravity">center_vertical</item>
		<item name="android:paddingLeft">?android:attr/listPreferredItemPaddingStart</item>
		<item name="android:paddingRight">?android:attr/listPreferredItemPaddingEnd</item>
		<item name="android:textIsSelectable">true</item>
		<item name="android:minHeight">?attr/listPreferredItemHeightSmall</item>
	</style>

	<!-- S T A T U S   /   S E T U P  -->

	<style name="GridLabel">
		<item name="android:layout_gravity">center_vertical|end</item>
		<item name="android:layout_marginLeft">@dimen/grid_group_margin_left</item>
		<item name="android:minHeight">@dimen/grid_min_row_height</item>
		<item name="android:layout_marginRight">@dimen/grid_group_margin_intra</item>
		<item name="android:layout_marginTop">@dimen/grid_group_margin_vertical</item>
		<item name="android:layout_marginBottom">@dimen/grid_group_margin_vertical</item>
		<item name="android:gravity">end</item>
		<item name="android:maxLines">2</item>
	</style>

	<style name="GridData"> <!-- includes image + button1 + button2-->
		<item name="android:minHeight">@dimen/grid_min_row_height</item>
		<item name="android:layout_marginLeft">@dimen/grid_group_margin_intra</item>
		<item name="android:layout_marginRight">@dimen/grid_group_margin_right</item>
		<item name="android:layout_marginTop">@dimen/grid_group_margin_vertical</item>
		<item name="android:layout_marginBottom">@dimen/grid_group_margin_vertical</item>
		<item name="android:orientation">horizontal</item>
	</style>

	<style name="GridStatusImage">
		<item name="android:layout_gravity">center</item>
		<item name="android:layout_marginRight">@dimen/grid_margin_intra</item>
		<item name="android:background">?attr/colorSecondaryVariant</item>
		<item name="android:paddingTop">@dimen/grid_image_padding_vertical</item>
		<item name="android:paddingBottom">@dimen/grid_image_padding_vertical</item>
		<item name="android:paddingLeft">@dimen/grid_image_padding_horizontal</item>
		<item name="android:paddingRight">@dimen/grid_image_padding_horizontal</item>
		<item name="android:src">@drawable/ic_unknown</item>
		<item name="android:tint">?attr/colorOnSecondary</item>
	</style>

	<!-- B U T T O N S-->

	<style name="BaseButton" parent="Widget.Material3.Button.IconButton">
		<item name="android:layout_width">@dimen/action_button_diameter</item>
		<item name="android:layout_height">@dimen/action_button_diameter</item>
		<item name="android:layout_centerHorizontal">true</item>
		<item name="android:layout_centerVertical">true</item>
		<item name="android:layout_gravity">center_horizontal</item>
		<item name="iconGravity">textStart</item>
		<item name="iconPadding">0dp</item>
		<item name="iconSize">@dimen/action_button_icon_diameter</item>
	</style>

	<style name="ActionButton" parent="BaseButton">
		<item name="backgroundTint">?attr/colorPrimary</item>
		<item name="android:background">@null</item>
		<item name="iconTint">?attr/colorOnPrimary</item>
	</style>

	<style name="InfoButton" parent="BaseButton">
		<item name="backgroundTint">@color/info_button_color</item>
		<item name="android:background">@null</item>
		<item name="iconTint">@android:color/white</item>
	</style>

</resources>
