<resources>

	<style name="MyBaseOverlay"/>
	<!--<style name="MyBaseOverlay" parent="ThemeOverlay.AppCompat.Dark"/>-->
	<!--<style name="MyBaseOverlay" parent="ThemeOverlay.AppCompat"/>-->
	<style name="MyActionBarBaseOverlay" />
	<!--<style name="MyActionBarBaseOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />-->
	<!--<style name="MyActionBarBaseOverlay" parent="ThemeOverlay.AppCompat.ActionBar" />-->

	<!-- Overlay -->
	<style name="MyOverlay" parent="MyBaseOverlay">
		<item name="android:background">@color/actionbar_color</item>item>
		<item name="android:textColorPrimary">@color/actionbar_fore_color</item>item>
		<item name="android:textColorSecondary">@color/actionbar_secondary_fore_color</item>
	</style>

	<!-- ActionBar Overlay -->
	<style name="MyActionBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar">
		<item name="android:textColorPrimary">@color/actionbar_fore_color</item>item>
		<item name="android:background">?attr/colorPrimary</item>
	</style>

	<!-- Toolbar -->
	<style name="MyToolbar" parent="Widget.AppCompat.Toolbar">
		<item name="android:background">@color/actionbar_color</item>
	</style>

	<!-- Action bar -->
	<style name="MyActionBar" parent="Widget.AppCompat.ActionBar">
		<item name="android:background">@color/actionbar_color</item>
	</style>

	<!-- Dropdown list -->
	<style name="MyDropDownListViewStyle" parent="Widget.AppCompat.ListView.DropDown">
		<item name="android:background">@color/dropdown_color</item>
	</style>

	<!-- Dropdown item -->
	<style name="MyDropDownItemStyle" parent="Widget.AppCompat.DropDownItem.Spinner">
		<item name="android:textColor">@color/dropdown_fore_color</item>
		<item name="android:textSize">14sp</item>
	</style>

	<!-- Autocomplete -->
	<style name="MyAutoCompleteTextViewStyle" parent="Widget.AppCompat.Light.AutoCompleteTextView">
		<item name="android:popupBackground">@color/dropdown_color</item>
	</style>

</resources>