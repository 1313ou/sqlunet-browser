<resources>

	<!-- F R A M E W O R K -->

	<color name="primaryColor">#FF4251bd</color> <!-- framework, middle color in nav drawer background gradient, x selector header -->
	<color name="primaryDarkColor">#FF293073</color> <!-- framework, end color in nav drawer gradient -->
	<color name="primaryLightColor">#FF4251dd</color> <!-- end color in nav drawer gradient, pm action bar, browse action bar, search text action bar, major list item -->

	<color name="accentColor">#FFef2063</color> <!-- framework, fabs, cased text color, app tile back in about,  -->

	<!-- text -->
	<color name="textColorPrimary">@android:color/black </color> <!-- framework -->
	<color name="textColorSecondary">@android:color/darker_gray</color> <!-- framework -->

	<!-- B A S E -->

	<!-- secondary -->
	<color name="secondaryColor">#FFef2063</color> <!-- group color, action button, spinner, drawer item -->
	<color name="secondaryLightColor">#FFff60C0</color> <!-- action button, drawer item,  swipe1 down, list item, status image back ground -->
	<color name="secondaryDarkColor">#FFcb0020</color> <!-- swipe2 down -->

	<!-- fore -->
	<color name="primaryForeColor">@android:color/white</color> <!-- action bar fore color, action bar title fore color, dropdown fore color, drawer item fore, selected tab, list item major fore, group fore color -->
	<color name="secondaryForeColor">#FF4a4848</color> <!-- overlay text color secondary, action bar subtitle fore color, list item fore color-->
	<color name="tertiaryForeColor">@android:color/white</color> <!-- task spinner item fore, ok drawable -->

	<!-- D E R I V E D -->

	<!-- action bar -->
	<color name="actionbar_color">@color/primaryColor</color>
	<color name="actionbar_fore_color">@color/primaryForeColor</color>
	<color name="actionbar_secondary_fore_color">@color/secondaryForeColor</color>
	<color name="dropdown_color">@color/primaryColor</color>
	<color name="dropdown_fore_color">@color/primaryForeColor</color>

	<!-- browse action bars -->
	<color name="browse_actionbar_color">@color/primaryLightColor</color>
	<color name="searchtext_actionbar_color">@color/primaryLightColor</color>

	<!-- special -->
	<color name="home_color">@color/primaryColor</color>

	<!-- swipe down refresh -->
	<color name="swipe_down_1_color">@color/secondaryLightColor</color>
	<color name="swipe_down_2_color">@color/secondaryDarkColor</color>

	<!-- button -->
	<color name="info_button_color">#FF4251bd</color>
	<color name="info_button_activated_color">#FF4251dd</color>
	<color name="ok_button_color">#FF008000</color>
	<color name="err_button_color">@color/dark_red_color</color>

	<!-- shadow -->
	<color name="shadow">#80202020</color>

</resources>
