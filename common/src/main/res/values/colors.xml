<resources>

	<!-- T H E M E  A T T R  -->

	<!-- primary -->
	<color name="primaryColor">#FF4251bd</color> <!-- framework + nav (middle in gradient), x selector header -->
	<color name="primaryDarkColor">#FF293073</color> <!-- framework + nav (end in gradient) -->
	<color name="primaryLightColor">#FF4251dd</color> <!-- framework + nav (start in gradient), browse action bar, search text action bar, pm action bar, major list item -->
	<color name="onPrimaryColor">#FFcccccc</color> <!-- framework + nav, tabs -->
	<color name="highLightOnPrimaryColor">@android:color/white</color> <!-- framework + nav, tabs-->

	<!-- secondary -->
	<color name="secondaryColor">#FFef2063</color> <!-- framework + action button, spinner, group bg, fabs bg, app title bg, swipe 1-->
	<color name="secondaryLightColor">#FFff60C0</color> <!-- framework + action button, activated list item, fabs fg, swipe2 down, status bg -->
	<color name="onSecondaryColor">#FFd0d0d0</color> <!-- framework +  spinner arrow, group fg -->
	<color name="onSecondaryColorHighlighted">@android:color/white</color> <!--  -->

	<!-- text - variants of colorOnBackground, must display on colorBackground -->
	<color name="colorHighlightOnBackground">@color/secondaryColor</color> <!-- framework, cased text color  -->
	<color name="colorDimmedOnBackground">#FF808080</color> <!-- framework  -->

	<!-- D E R I V E D -->

	<!-- swipe down refresh -->
	<color name="swipe_down_1_color">@color/secondaryColor</color>
	<color name="swipe_down_2_color">@color/secondaryLightColor</color>

	<!-- button -->
	<color name="info_button_color">#FF4251bd</color>
	<color name="info_button_activated_color">#FF4251dd</color>
	<color name="ok_button_color">#FF008000</color>
	<color name="err_button_color">@color/dark_red_color</color>

	<!-- shadow -->
	<color name="shadow">#80202020</color>

</resources>
