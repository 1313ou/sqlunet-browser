<resources>

	<style name="MyBaseTheme" parent="Theme.AppCompat.DayNight.NoActionBar" />

	<style name="MyXBaseTheme" parent="MyBaseTheme" />

	<style name="MyTheme" parent="MyXBaseTheme">

		<!-- framework colors -->
		<item name="android:colorBackground">@color/backgroundColor</item>
		<item name="android:colorForeground">@color/foregroundColor</item>
		<!-- <item name="colorOnSurface">@color/backgroundColor</item>-->
		<!-- <item name="colorSurface">@color/foregroundColor</item>-->

		<item name="colorPrimary">@color/primaryColor</item>
		<item name="colorPrimaryVariant">@color/primaryLightColor</item>
		<item name="colorPrimaryDark">@color/primaryDarkColor</item>
		<item name="colorOnPrimary">@color/onPrimaryColor</item>

		<item name="colorSecondary">@color/secondaryColor</item>
		<item name="colorSecondaryVariant">@color/secondaryLightColor</item>
		<item name="colorOnSecondary">@color/onSecondaryColor</item>

		<item name="colorAccent">@color/secondaryColor</item>

		<!-- extras color attrs -->
		<item name="colorHighlightOnPrimary">@color/highlightOnPrimaryColor</item>
		<item name="colorHighlightOnBackground">@color/colorHighlightOnBackground</item>
		<item name="colorDimmedOnBackground">@color/colorDimmedOnBackground</item>

		<!-- B A S E -->

		<!-- action bar -->
		<item name="android:actionBarStyle">@style/MyActionBar</item>

		<!-- action bar theme UI -->
		<item name="actionBarTheme">@style/MyActionBarOverlay</item>

		<!-- action bar popup theme UI -->
		<item name="actionBarPopupTheme">@style/MyOverlay</item>

		<!-- dropdowns -->
		<item name="android:dropDownListViewStyle">@style/MyDropDownListViewStyle</item>
		<item name="android:dropDownItemStyle">@style/MyDropDownItemStyle</item>

		<!-- background of activated indicator -->
		<item name="android:activatedBackgroundIndicator">@drawable/listitem_background</item>

		<!-- autocomplete -->
		<item name="android:autoCompleteTextViewStyle">@style/MyAutoCompleteTextViewStyle</item>

	</style>

</resources>