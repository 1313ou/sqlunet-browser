<navigation xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	xmlns:tools="http://schemas.android.com/tools"
	android:id="@+id/mobile_navigation"
	app:startDestination="@+id/nav_home">

	<fragment
		android:id="@+id/nav_home"
		android:name="org.sqlunet.browser.HomeFragment"
		android:label="@string/menu_home"
		tools:layout="@layout/fragment_home" />

	<fragment
		android:id="@+id/nav_status"
		android:name="org.sqlunet.browser.StatusFragment"
		android:label="@string/menu_status"
		tools:layout="@layout/fragment_status" />

	<activity
		android:id="@+id/nav_setup"
		android:name="org.sqlunet.browser.config.SetupActivity"
		android:label="@string/menu_setup" />

	<fragment
		android:id="@+id/nav_storage"
		android:name="org.sqlunet.browser.config.StorageFragment"
		android:label="@string/menu_storage"
		tools:layout="@layout/fragment_storage" />

	<activity
		android:id="@+id/nav_settings"
		android:name="org.sqlunet.browser.config.SettingsActivity"
		android:label="@string/menu_settings" />

	<fragment
		android:id="@+id/nav_sql"
		android:name="org.sqlunet.browser.SqlFragment"
		android:label="@string/menu_sql"
		tools:layout="@layout/fragment_sql" />

	<fragment
		android:id="@+id/nav_help"
		android:name="org.sqlunet.browser.HelpFragment"
		android:label="@string/menu_sql"
		tools:layout="@layout/fragment_help" />

	<fragment
		android:id="@+id/nav_about"
		android:name="org.sqlunet.browser.AboutFragment"
		android:label="@string/menu_about"
		tools:layout="@layout/fragment_about" />

</navigation>