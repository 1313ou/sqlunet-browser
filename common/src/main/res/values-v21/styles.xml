<?xml version="1.0" encoding="utf-8"?>
<resources>

	<!-- BASE application theme, dependent on API level. This theme is replaced by AppBaseTheme from res/values-vXX/styles-app.xml on newer devices. -->
	<style name="CompatAppBaseTheme" parent="Theme.AppCompat.Light.NoActionBar">
	</style>

	<!-- APP theme -->
	<style name="CompatAppTheme" parent="CompatAppBaseTheme">

		<item name="colorPrimary">@color/primaryColor</item>
		<item name="colorPrimaryDark">@color/primaryDarkColor</item>
		<item name="colorAccent">@color/accentColor</item>

		<!--
		<item name="android:textColorPrimary">@color/primaryTextColor</item>
		<item name="android:textColorSecondary">@color/secondaryTextColor</item>
		-->

		<!-- toolbar/action bar -->
		<item name="toolbarStyle">@style/CompatAppTheme.Toolbar</item>
		<item name="actionBarStyle">@style/CompatAppTheme.ActionBar</item>

		<!-- dropdowns -->
		<item name="android:dropDownItemStyle">@style/CompatAppTheme.DropDownItemStyle</item>
		<item name="dropDownListViewStyle">@style/CompatAppTheme.DropDownListViewStyle</item>

		<!-- background of activated indicator -->
		<item name="android:activatedBackgroundIndicator">@drawable/listitem_background</item>

		<!-- theme UI preference -->
		<item name="preferenceTheme">@style/PreferenceCompatTheme</item>

	</style>

	<!-- Custom background theme -->
	<style name="CustomBackgroundCompatAppTheme" parent="CompatAppBaseTheme">

		<item name="android:windowBackground">@null</item>
		<item name="background">@color/home_color</item>

	</style>

</resources>