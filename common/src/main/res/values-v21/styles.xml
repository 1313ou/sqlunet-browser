<resources>

	<!-- BASE application theme, dependent on API level. This theme is replaced by AppBaseTheme from res/values-vXX/styles-app.xml on newer devices. -->
	<style name="MyAppBaseTheme" parent="Theme.AppCompat.Light.NoActionBar">
	</style>

	<!-- APP theme -->
	<style name="MyAppTheme" parent="MyAppBaseTheme">

		<item name="colorPrimary">@color/primaryColor</item>
		<item name="colorPrimaryDark">@color/primaryDarkColor</item>
		<item name="colorAccent">@color/accentColor</item>

		<!--
		<item name="android:textColorPrimary">@color/primaryTextColor</item>
		<item name="android:textColorSecondary">@color/secondaryTextColor</item>
		-->

		<!-- toolbar/action bar -->
		<item name="toolbarStyle">@style/MyAppTheme.Toolbar</item>
		<item name="actionBarStyle">@style/MyAppTheme.ActionBar</item>

		<!-- dropdowns -->
		<item name="android:dropDownItemStyle">@style/MyAppTheme.DropDownItemStyle</item>
		<item name="dropDownListViewStyle">@style/MyAppTheme.DropDownListViewStyle</item>

		<!-- autocomplete -->
		<item name="autoCompleteTextViewStyle">@style/MyAppTheme.AutoCompleteTextViewStyle</item>

		<!-- background of activated indicator -->
		<item name="android:activatedBackgroundIndicator">@drawable/listitem_background</item>

		<!-- theme UI preference -->
		<item name="preferenceTheme">@style/PreferenceCompatTheme</item>

	</style>

	<!-- Custom background theme -->
	<style name="MyCustomBackgroundAppTheme" parent="MyAppBaseTheme">

		<item name="android:windowBackground">@null</item>
		<item name="android:background">@color/home_color</item>

	</style>

</resources>