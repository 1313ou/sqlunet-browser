<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	app:title="@string/pref_header_downloaded">

	<!-- NOTE: Hide buttons to simplify the UI. Users can touch outside the dialog to dismiss it. -->
	<!-- NOTE: ListPreference's summary should be set to its value by the activity code. -->

	<PreferenceCategory android:title="@string/pref_model_category">
		<Preference
			android:key="pref_model_name"
			android:selectable="false"
			android:title="@string/pref_title_model_name" />

		<Preference
			android:key="pref_model_date"
			android:selectable="false"
			android:title="@string/pref_title_model_date" />

		<Preference
			android:key="pref_model_size"
			android:selectable="false"
			android:title="@string/pref_title_model_size" />
	</PreferenceCategory>

	<PreferenceCategory android:title="@string/pref_source_category">
		<Preference
			android:key="pref_model_source"
			android:selectable="false"
			android:title="@string/pref_title_model_source" />

		<Preference
			android:key="pref_model_source_date"
			android:selectable="false"
			android:title="@string/pref_title_model_source_date" />

		<Preference
			android:key="pref_model_source_size"
			android:selectable="false"
			android:title="@string/pref_title_model_source_size" />

		<Preference
			android:key="pref_model_source_etag"
			android:selectable="false"
			android:title="@string/pref_title_model_source_etag" />

		<Preference
			android:key="pref_model_source_version"
			android:selectable="false"
			android:title="@string/pref_title_model_source_version" />

		<Preference
			android:key="pref_model_source_static_version"
			android:selectable="false"
			android:title="@string/pref_title_model_source_static_version" />
	</PreferenceCategory>

	<PreferenceCategory android:title="@string/pref_control_category">
		<Preference
			android:key="pref_model_clear"
			android:summary="@string/description_model_clear"
			android:title="@string/title_model_clear" />
	</PreferenceCategory>

</PreferenceScreen>
