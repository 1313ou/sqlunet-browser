<androidx.preference.PreferenceScreen
	xmlns:android="http://schemas.android.com/apk/res/android">

	<SwitchPreferenceCompat
		android:defaultValue="true"
		android:key="pref_enable_wordnet"
		android:summary="@string/pref_description_enable_wordnet"
		android:title="@string/pref_title_enable_wordnet"/>
	<SwitchPreferenceCompat
		android:defaultValue="true"
		android:key="pref_enable_bnc"
		android:summary="@string/pref_description_enable_bnc"
		android:title="@string/pref_title_enable_bnc"/>
	<EditTextPreference
		android:defaultValue="-1"
		android:key="pref_link_recurse"
		android:numeric="integer"
		android:summary="@string/pref_description_link_recursion"
		android:title="@string/pref_title_link_recursion"/>

</androidx.preference.PreferenceScreen>
