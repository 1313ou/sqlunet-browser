<resources>

	<style name="Label" parent="@android:style/TextAppearance.Small">
		<item name="android:layout_height">wrap_content</item>
		<item name="android:layout_marginLeft">8dp</item>
		<item name="android:textColor">#808080</item>
		<item name="android:textSize">16sp</item>
	</style>

	<style name="Data" parent="@android:style/TextAppearance.Small">
		<item name="android:layout_height">wrap_content</item>
		<item name="android:layout_marginLeft">2dp</item>
		<item name="android:layout_marginRight">2dp</item>
		<item name="android:textColor">#000000</item>
		<item name="android:textSize">18sp</item>
		<item name="android:paddingLeft">2dp</item>
		<item name="android:paddingRight">2dp</item>
		<item name="android:layout_marginTop">1dp</item>
		<item name="android:layout_marginBottom">1dp</item>
	</style>

	<style name="Label.Info">
		<item name="android:visibility">gone</item>
		<item name="android:layout_marginTop">1dp</item>
		<item name="android:layout_marginBottom">20dp</item>
	</style>

	<style name="Label.Contents">
		<item name="android:visibility">gone</item>
	</style>

	<style name="Data.Info">
		<item name="android:textColor">#FF404040</item>
		<item name="android:textSize">12sp</item>
	</style>

	<style name="Data.Contents"/>

	<style name="Separator">
		<item name="android:layout_width">fill_parent</item>
		<item name="android:layout_height">1dp</item>
		<item name="android:layout_marginTop">1dp</item>
		<item name="android:layout_marginBottom">1dp</item>
		<item name="android:background">@android:color/holo_blue_light</item>
		<item name="android:visibility">visible</item>
	</style>

	<style name="NoBackground" parent="AppTheme">
		<item name="android:windowBackground">@null</item>
	</style>

	<style name="Query">
		<item name="android:layout_width">fill_parent</item>
		<item name="android:layout_height">1dp</item>
		<item name="android:paddingTop">8dp</item>
		<item name="android:paddingBottom">8dp</item>
		<item name="android:textSize">12sp</item>
		<item name="android:background">@android:color/holo_green_light</item>
	</style>

	<style name="Search">
		<item name="android:layout_width">fill_parent</item>
		<item name="android:layout_height">1dp</item>
		<item name="android:paddingTop">8dp</item>
		<item name="android:paddingBottom">8dp</item>
		<item name="android:textSize">12sp</item>
		<item name="android:background">@android:color/holo_orange_light</item>
	</style>

</resources>