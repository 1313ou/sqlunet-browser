<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:minHeight="@dimen/height_row_min"
	android:orientation="horizontal">

	<ImageView
		android:id="@+id/node_icon"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_gravity="top"
		android:contentDescription="@string/hint_icon"
		android:gravity="center_vertical" />

	<TextView
		android:id="@+id/node_value"
		android:layout_width="0dp"
		android:layout_height="wrap_content"
		android:layout_marginStart="@dimen/margin_value_start"
		android:layout_marginEnd="@dimen/margin_value_end"
		android:layout_weight="1"
		android:ellipsize="end"
		android:maxLines="@integer/lines_row"
		android:textIsSelectable="false" />

	<ImageView
		android:id="@+id/node_link"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_gravity="top"
		android:layout_marginStart="@dimen/margin_link_start"
		android:layout_marginEnd="@dimen/margin_link_end"
		android:contentDescription="@string/hint_link"
		android:gravity="center_vertical"
		android:src="@drawable/ic_link" />

</LinearLayout>