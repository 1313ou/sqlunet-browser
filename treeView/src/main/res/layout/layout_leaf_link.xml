<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:minHeight="10dp"
              android:orientation="horizontal">

	<ImageView
		android:id="@+id/junction_icon"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_gravity="top"
		android:contentDescription="@string/hint_leaf"
		android:gravity="center_vertical"
		android:src="@drawable/ic_deadend"/>

	<ImageView
		android:id="@+id/node_icon"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_gravity="top"
		android:contentDescription="@string/hint_icon"
		android:gravity="center_vertical"/>

	<TextView
		android:id="@+id/node_value"
		android:layout_width="0dp"
		android:layout_height="wrap_content"
		android:layout_marginEnd="10dp"
		android:layout_marginLeft="10dp"
		android:layout_marginRight="10dp"
		android:layout_marginStart="10dp"
		android:layout_weight="1"
		android:textIsSelectable="true"/>

	<ImageView
		android:id="@+id/node_link"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_gravity="top"
		android:layout_marginLeft="0dp"
		android:layout_marginStart="0dp"
		android:layout_marginRight="5dp"
		android:layout_marginEnd="5dp"
		android:contentDescription="@string/hint_link"
		android:gravity="center_vertical"
		android:src="@drawable/ic_link"
		tools:ignore="RtlHardcoded"/>

</LinearLayout>